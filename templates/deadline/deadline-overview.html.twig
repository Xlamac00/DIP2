        <div class="clearfix">
            <h1 class="float-left pt-3 pb-0">My deadlines</h1>
        </div>

        <div class="card-columns">
            {% for issue in deadlines %}
                {#<div class="col-md-4 p-0 m-0 mb-4">#}
