
<div class="card-header clearfix p-0 px-lg-1 pl-md-2 pt-lg-1 pb-0 {{ issue.color }}">
    <h5 class="float-left mt-1">
        <a href="../../{{ issue.url }}" title="{{ issue.name }}"  class="text-white">{{ issue.name }}</a>
    </h5>
</div>

<div class="card-body px-1 pt-1 pt-lg-2 p-0 bg-white">
    {% for deadline in issue.deadlines %}
        <div class="mb-1 mb-lg-3">
            <div class="d-flex justify-content-between p-0">
                <div class="d-none d-lg-block p-0 pl-1 m-0">{{ deadline.start }}</div>
                {#<h5 style="color: {{ deadline.color }}">{{ deadline.name }}</h5>#}
                <h5>{{ deadline.name }}</h5>
                <div class="d-none d-lg-block p-0 pr-1 m-0">{{ deadline.end }}</div>
            </div>
            {% if deadline.text|length > 0 %}
                <p class="d-none d-lg-block small m-0 p-0 mb-1">{{ deadline.text }}</p>
            {% endif %}
            <div class="row">
                <div class="col-12">
                    <div class="progress bg-muted">
                        <div class="progress-bar" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"
                             style="width: {{ deadline.percentage }}%; background-color: {{ deadline.color }}">
                            <span class="d-none d-lg-block">
                                {% if  deadline.percentage == 100 %} Time's up!
                                {% elseif deadline.percentage > 25 %}
                                    {{ deadline.daysLeft }} day{% if deadline.daysLeft > 1 %}s{% endif %} left
                                {% endif %}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex d-lg-none justify-content-between">
                <div class="p-0 m-0">{{ deadline.start }}</div>
                <div class="p-0 m-0">{{ deadline.end }}</div>
            </div>
        </div>
    {% endfor %}
</div>