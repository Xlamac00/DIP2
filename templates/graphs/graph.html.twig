
<canvas id="{{ gauge_name }}" height="3" width="5"></canvas>
<script>
    var canvas = document.getElementById("{{ gauge_name }}");
    var ctx = canvas.getContext('2d');
    chart = new Chart(ctx, {
        type: 'bar',
        issueId: '{{ issue_id }}',
        data: {
            labels: [
                {% for gauge in gauges %}
                {#'{{ gauge.name }}',#}
                '{{ gauge.bindUserName }}',
                {% endfor %}
            ],
            datasets: [{
                data: [
                    {% for gauge in gauges %}
                    '{{ gauge.value }}',
                    {% endfor %}
                ],
                backgroundColor: [
                    {% for gauge in gauges %}
                    '{{ gauge.color }}',
                    {% endfor %}
                ],
                borderColor: [
                    {% for gauge in gauges %}
                    '{{ gauge.color }}',
                    {% endfor %}
                ],
                label: [
                    {% for gauge in gauges %}
                    '{{ gauge.name }}',
                    {% endfor %}
                ],
                borderWidth: 1
            }]
        },
        options: options
    });
</script>