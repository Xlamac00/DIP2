
<ul class="navbar-nav mr-auto">
    <li class="nav-item active">
        <a class="nav-link" href="{{ url('homepage') }}">{% trans %}Home{% endtrans %} <span class="sr-only">(current)</span></a>
    </li>
</ul>

<div class="dropdown">

    {% if is_granted('ROLE_ANONYMOUS') %}
        <button class="nobtn float-right text-light pointer mt-1 p-0 user-portrait"
                style="background-color: {{ app.user.color }}"  data-toggle="dropdown" aria-haspopup="false"
                type="button" aria-expanded="true" id="dropdownMenuUser">
            <i class="fas fa-2x fa-user-circle user-image-anonymous"></i>
        </button>
    {% else %}
        <button class="nobtn float-right pointer m-0" id="dropdownMenuUser"
                data-toggle="dropdown" aria-haspopup="false" aria-expanded="true">
            <img src="{{ app.user.imagelink }}" class="user-portrait user-image-google">
        </button>
    {% endif %}
    <div class="dropdown-menu mt-2" aria-labelledby="dropdownMenuUser" style="right: 0; left: auto;"
         id="navbar-user-menu">
        <label title="Change user name" for="navbar-username">
            <span class="input-group">
                <input type="text" value="{{ app.user.username }}" id="navbar-username"
                       class="text-left borderless text-secondary bg-white pl-3" disabled >
                <input type="hidden" value="{{ app.user.username }}" id="user-name">
                <span class="text-secondary pointer mt-2 m-1" id="navbar-user-edit"><i class="fas fa-1x fa-edit"></i></span>
            </span>
        </label>
        <div class="dropdown-divider"></div>
        {% if is_granted('ROLE_ANONYMOUS') %}
            <a class="dropdown-item pointer" href="{{ path('hwi_oauth_service_redirect', {'service': 'google'}) }}">Login with Google</a>
        {% else %}
            <a class="dropdown-item pointer" href="{{ url('logout') }}">Logout</a>
        {% endif %}
    </div>
    <span class="btn-group">
        <button type="button" class="nobtn float-right text-light pointer mt-1 mr-3"
                id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-2x fa-plus-circle user-image-anonymous"></i>
        </button>
        <div class="dropdown-menu mt-2 mr-3" aria-labelledby="navbarDropdownMenuLink"  style="right: 0; left: auto;">
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
        </div>
    </span>
</div>