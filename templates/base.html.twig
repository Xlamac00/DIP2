<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% block stylesheets %}
        <script src="{{ asset('build/manifest.js') }}"></script>
        <script src="{{ asset('build/vendor.js') }}"></script>
        <link rel="icon" type="image/x-icon" href="{{ asset('build/images/favicon.231567a8.ico') }}" />
        <link rel="stylesheet" href="{{ asset('build/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('build/app.css') }}" />
    {% endblock %}
</head>
<body>
{% block menu %}
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a href="{{ url('homepage') }}" class="navbar-brand">{% trans %}Home{% endtrans %}</a>
            <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href=".">Home <span class="sr-only">(current)</span></a>
                    </li>
                </ul>

                <div class="dropdown">
                    <button type="button" class="nobtn float-right text-light mt-1 pointer"
                            id=""
                            data-toggle="dropdown" aria-haspopup="false" aria-expanded="true">
                        <i class="fas fa-2x fa-user"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton" style="right: 0; left: auto;">
                        <a class="dropdown-item pointer" id="">User options</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
{% endblock %}

<div class="container-fluid">
    <div class="row">
        {% block body %}{% endblock %}
    </div>
</div>

{% block javascripts %}{% endblock %}
</body>
</html>
