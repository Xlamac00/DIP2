
<div class="col-md-3 p-0 mb-3" id="{{ section }}{{ role.board.pageId }}">
    <div class="card">
        <div class="card-header rounded-0 pb-3 {{ role.board.background }}">
            <button class="nobtn pointer float-right dashboardFavorite {{ section }}orite"
                    id="{{ section }}btn{{ role.board.pageId }}">
                {% if role.favorite %}
                    <i class="fas fa-star"></i>
                {% else %}
                    <i class="far fa-star"></i>
                {% endif %}
            </button>
        </div>
        <div class="card-body mb-4 pb-2">
            <div class="position-absolute" style="height: 1px">
                <div class="dashboard-userlist">
                    {% for user in role.board.activeUsers %}
                        {{ include('user/user-icon.html.twig', {'user': user, 'size': 'small', 'entity': role.board}) }}
                    {% endfor %}
                </div>
            </div>
            <h5 class="card-title">
                <a href="./{{ role.board.url }}">{{ role.board.name }}</a>
            </h5>
        </div>
    </div>
</div>