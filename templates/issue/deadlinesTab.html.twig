
<div class="d-flex justify-content-between">
    <h3 class="text-smallcaps">Manage deadlines:</h3>
    <button type="button" class="close float-right gaugeCloseBtn" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<h6>Link deadline to:</h6>
<div id="deadlinesSelect">
    {{ include('issue/deadlinesSelect.html.twig', {'deadlines': deadlines, 'issue': issue}) }}
</div>
<div id="deadlinesDatepicker">
    <div class="input-daterange input-group" id="datepicker">
        <input type="text" class="input-sm form-control bg-white"
               name="start" placeholder="Start date" id="deadlineStart" readonly />
        <span class="input-group-addon px-3">to</span>
        <input type="text" class="input-sm form-control bg-white"
               name="end" placeholder="End date" id="deadlineEnd" readonly />
    </div>
</div>

<div class="form-group mt-2">
    <textarea class="form-control" id="deadlineTextarea" rows="1" placeholder="Deadline description"></textarea>
</div>

<button class="btn btn-success mx-auto pointer mt-3 d-block" style="width: 130px;"
        id="issueDeadlineSaveBtn">Save deadline</button>
<div class="m-0 p-0 d-md-block d-lg-none">&nbsp;</div>
